{
  "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
  "runtime": {
    "version": "LuaJIT",
    "path": ["lua/?.lua", "lua/?/init.lua"]
  },
  "workspace": {
    "library": ["lua", "${3rd}/luassert/library"],
    "checkThirdParty": false
  },
  "diagnostics": {
    "globals": ["args", "options", "git", "colors"]
  },
  "format": {
    "enable": true,
    "defaultConfig": {
      "max_line_length": 80
    }
  }
}
